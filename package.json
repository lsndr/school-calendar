{
  "name": "school-calendar",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"**/*.{js,ts,tsx,json}\" --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "lint:fix-staged": "lint-staged",
    "test": "jest --testPathPattern=\\.spec\\.ts$",
    "test:integration": "jest --runInBand --testPathPattern=\\.test\\.ts$",
    "migration:create": "mikro-orm migration:create --blank",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down",
    "dev:up": "devcontainer up --workspace-folder ./",
    "dev:stop": "devcontainer stop",
    "dev:exec": "devcontainer exec --workspace-folder ./",
    "prepare": "husky install",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.6.9",
    "@mikro-orm/core": "^5.6.9",
    "@mikro-orm/migrations": "^5.6.9",
    "@mikro-orm/postgresql": "^5.6.9",
    "@nestjs/common": "^9.3.8",
    "@nestjs/core": "^9.3.8",
    "@nestjs/cqrs": "^10.0.1",
    "@nestjs/platform-express": "^9.3.8",
    "@nestjs/swagger": "^6.2.1",
    "async-retry": "^1.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": ">=0.14.1",
    "dotenv": "^16.0.3",
    "luxon": "^3.2.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^6.0.1",
    "rrule-rust": "^2.0.1",
    "rxjs": "^7.8.0"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@devcontainers/cli": "^0.30.0",
    "@mikro-orm/sqlite": "^5.6.9",
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.8",
    "@semantic-release/git": "^10.0.1",
    "@types/async-retry": "^1.4.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/luxon": "^3.2.0",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-typescript-paths": "^0.0.33",
    "husky": "^8.0.3",
    "jest": "^29.4.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.2.5",
    "ts-loader": "^8.0.18",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.9.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json}": "eslint --fix --max-warnings=0"
  }
}
